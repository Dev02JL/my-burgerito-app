{
  "name": "burgerito",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:api": "jest --testPathPattern=api --coverage",
    "test:e2e": "test -d .next || npm run build; start-server-and-test start http://localhost:3000 cypress:run",
    "test:e2e:build": "npm run build && start-server-and-test start http://localhost:3000 cypress:run",
    "test:e2e:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "dependencies": {
    "lucide-react": "0.544.0",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.5.13",
    "cypress": "^13.7.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "start-server-and-test": "^2.1.3",
    "supertest": "^6.3.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
